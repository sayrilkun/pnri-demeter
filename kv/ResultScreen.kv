<ResultScreen>:
    name: 'result'
    MDScreen:
        md_bg_color: app.dark2
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            md_bg_color: app.dark2
            id: species
            title: "Idenftification Results"
            type_height: "small"
            left_action_items: [["arrow-left", lambda x : app.swtchScreen('menu')]]
            # right_action_items: [["delete", lambda x : app.delete_dialog()], ["file-edit", lambda x : app.edit_doc()]]

        MDTabs:
            id: tabs
            background_color: rgba(0,0,0,0)
            tab_hint_x: True
            # on_tab_switch: app.on_tab_switch(*args)
            Tab:
                title: "Difference Score"
                AnchorLayout:
                    id:diff
            Tab:
                title: "Passed"
                ScrollView:
                    MDList:
                        id:passed
                    
            Tab:
                title: "T Test"


                AnchorLayout:
                    id:ttest