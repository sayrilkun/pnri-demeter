<SettingsScreen>:
    name: 'settings'
    MDScreen:
        md_bg_color:app.dark2
    MDLabel:
        text: 'Settings'
        halign: 'center'
        font_style: 'H6'
        pos_hint: {'center_x':0.5,'center_y':0.95}

    MDIconButton:
        icon:'arrow-left'
        pos_hint: {'center_x':0.1,'center_y':0.95}
        on_press: 
            root.manager.current = 'menu'
            root.manager.transition.direction = "right"
            
    MDTextField:
        id: input_7
        hint_text: "Current Username"
        pos_hint: {"center_x": 0.5, "center_y": 0.75}
        size_hint: .75,0.075
        mode: "rectangle"
        color_mode: 'accent'

    MDTextField:
        id: input_8
        hint_text: "New Username"
        pos_hint: {"center_x": 0.5, "center_y": 0.65}
        size_hint: .75,0.075
        mode: "rectangle"
        color_mode: 'accent'

    MDTextField:
        id: input_9
        hint_text: "Current Password"
        pos_hint: {"center_x": 0.5, "center_y": 0.55}
        size_hint: .75,0.075
        mode: "rectangle"
        color_mode: 'accent'

    MDTextField:
        id: input_10
        hint_text: "New Password"
        pos_hint: {"center_x": 0.5, "center_y": 0.45}
        size_hint: .75,0.075
        mode: "rectangle"
        color_mode: 'accent'