<IdentifierScreen>:
    name: 'iden'
    MDScreen:
        md_bg_color:app.dark2
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            md_bg_color:app.dark2
            title: "Upload Data"
            type_height: "small"
            left_action_items: [["arrow-left", lambda x : app.swtchScreen('menu')]]
            # right_action_items: [["eraser", lambda x : root.eraser()]]
        MDTabs:
            id: tabs
            background_color: rgba(0,0,0,0)
            tab_hint_x: True
            Tab:
                title: "Morphology"
                ScrollView:
                    MDGridLayout:
                        id: box
                        adaptive_height: True
                        cols: 1    

                MDRaisedButton:
                    text: 'add sample'
                    pos_hint: {"center_x": 0.25, "center_y": 0.23}
                    on_press:
                        app.show_dialog()

                MDRaisedButton:
                    text: 'identify'
                    pos_hint: {"center_x": 0.75, "center_y": 0.23}
                    on_press:
                        app.createTable()

                        # app.identify(app.morph)