<SingleDocScreen>:
    name: 'singledoc'
    MDScreen:
        md_bg_color:app.dark2
    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            md_bg_color:app.dark2
            id: species
            title: "Example Tabs"
            type_height: "small"
            left_action_items: [["arrow-left", lambda x : app.swtchScreen('collections')]]
            right_action_items: [["delete", lambda x : app.delete_dialog()], ["file-edit", lambda x : app.edit_doc()]]

        MDTabs:
            id: tabs
            background_color: rgba(0,0,0,0)
            tab_hint_x: True
            # on_tab_switch: app.on_tab_switch(*args)
            Tab:
                title: "Passport Data"
                MDFloatLayout:
                    # orientation: "vertical"
                    MDRoundFlatButton:
                        id: imag
                        pos_hint: {"center_x": 0.7, "center_y": 0.95}
                    MDRoundFlatButton:
                        id: file
                        pos_hint: {"center_x": 0.7, "center_y": 0.85}
                MDBoxLayout:
                    orientation: "vertical"
                    # # size_hint_y:.5
                    padding:dp(15)
                    AsyncImage:
                        id: img_url
                        size_hint_y: None
                        source: 'http://kivy.org/slides/kivypictures-thumb.jpg'
                        width: 100
                        height:  100
                        allow_stretch: True
                        pos_hint: {"center_x": 0.3, "center_y": 0.9}
                    MDBoxLayout:
                        orientation: "vertical"
                        padding:dp(5)
                        ScrollView:
                            MDList:
                                id:datas
                                
            Tab:
                title: "Morphology"
                # MDBoxLayout:
                #     orientation: "vertical"
                # MDLabel:
                #     id: header
                #     text: " "
                #     # halign: "center"
                #     pos_hint: {"center_x": 0.5, "center_y": 0.95}
                MDBoxLayout:
                    padding:dp(15)
                    orientation: "vertical"
                    ScrollView:
                        MDList:
                            id:dataso
            Tab:
                title: "QR Code"
                MDBoxLayout:
                    orientation: "vertical"
                    padding:dp(30)
                    AsyncImage:
                        id: qr_url
                        size_hint_y: None
                        # source: 'http://kivy.org/slides/kivypictures-thumb.jpg'
                        width: 100
                        height: dp(300)
                        allow_stretch: True
                        pos_hint: {"center_x": 0.5, "center_y": 0.95}
                    MDBoxLayout:
                        padding:dp(30)
                        orientation: "vertical"
                        MDRaisedButton:
                            id: qr
                            text: "Save QR Code"
                            pos_hint: {"center_x": 0.5, "center_y": 0.6}