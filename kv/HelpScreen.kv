<HelpScreen>:
    name: 'help'

    MDScreen:
        md_bg_color:app.dark2

    MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            md_bg_color: app.dark2
            title: "How to Use the App"
            type_height: "small"
            left_action_items: [["arrow-left", lambda x : app.swtchScreen('menu')]]
        MDBoxLayout:
            orientation: "vertical"
            padding: dp(25)

            ScrollView:
                MDGridLayout:
                    id: box
                    cols: 1
                    adaptive_height: True

<HelpContent>
    adaptive_height: True

    # MDGridLayout:
